<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/meizi_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/meizi_imageView"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mezi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iamgeView3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:padding="1dp"
        android:src="@drawable/ic_favorite"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meizi_imageView" />

    <TextView
        android:id="@+id/meizi_favorites"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:text="8398"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iamgeView3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:padding="1dp"
        android:src="@drawable/ic_content"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meizi_favorites" />

    <TextView
        android:id="@+id/meizi_item_comments"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:text="1138"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:padding="1dp"
        android:src="@drawable/ic_person"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/iamgeView3"
        app:layout_constraintStart_toEndOf="@+id/meizi_imageView" />

    <TextView
        android:id="@+id/meizi_item_name"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:text="sophia"
        app:layout_constraintBottom_toTopOf="@+id/meizi_favorites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView7" />

    <TextView
        android:id="@+id/meizi_item_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="I'm the most beautiful girl in the world! Do you agree?"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/meizi_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meizi_imageView"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
